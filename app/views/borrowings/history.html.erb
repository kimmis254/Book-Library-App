<h1>Borrowing History for <%= @borrower_name %></h1>

<% if @borrowings.any? %>
  <table>
    <tr>
      <th>Book Title</th>
      <th>Borrowed At</th>
      <th>Returned At</th>
    </tr>
    <% @borrowings.each do |borrowing| %>
      <tr>
        <td><%= borrowing.book.title %></td>
        <td><%= borrowing.borrowed_at.strftime("%d %b %Y, %H:%M") %></td>
        <td><%= borrowing.returned_at ? borrowing.returned_at.strftime("%d %b %Y, %H:%M") : "Not returned" %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>No borrowing history found for <strong><%= @borrower_name %></strong>.</p>
<% end %>

<%= link_to "Back to Books", books_path, class: "button button-secondary" %>

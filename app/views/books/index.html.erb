<h1>Library Books</h1>
<%= link_to 'Add Book', new_book_path, class: "btn btn-primary" %>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book %></td>
      <td><%= book.author %></td>
      <td><%= book.status.capitalize %></td>
      <td>
        <%= link_to 'Edit', edit_book_path(book) %> |
        <%= link_to "Delete Book", book_path(book), method: :delete, data: { confirm: "Are you sure you want to delete this book?" }, class: "button button-danger" %>
      </td>
    </tr>
  <% end %>
</table>
